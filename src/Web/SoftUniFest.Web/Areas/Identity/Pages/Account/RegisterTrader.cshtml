@page
@model SoftUniFest.Web.Areas.Identity.Pages.Account.RegisterTraderModel
@{
}

@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new trader account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.PhoneNumber"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.CreditCardNumber" class="form-control" type="number" aria-required="true" />
                <label asp-for="Input.CreditCardNumber"></label>
                <span asp-validation-for="Input.CreditCardNumber" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ExpiredOn" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.ExpiredOn"></label>
                <span asp-validation-for="Input.ExpiredOn" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}