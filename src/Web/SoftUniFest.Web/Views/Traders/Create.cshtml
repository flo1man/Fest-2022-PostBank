@model SoftUniFest.Web.ViewModels.Discounts.DiscountInputModel

@{
    this.ViewData["Title"] = "Create Discount";
}

<form method="post">
    <div class="form-group">
        <label asp-for="Percentage"></label>
        <input asp-for="Percentage" class="form-control" />
        <span asp-validation-for="Percentage" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" max="@DateTime.Now.AddYears(1).ToString("yyyy-MM-ddThh:mm")" min="@DateTime.Now.ToString("yyyy-MM-ddThh:mm")" type="datetime-local" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" max="@DateTime.Now.AddYears(1).ToString("yyyy-MM-ddThh:mm")" min="@DateTime.UtcNow.ToString("yyyy-MM-ddThh:mm")" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>
    <input type="submit" class="btn btn-primary" />
</form>

