@model SoftUniFest.Web.ViewModels.PosTerminals.TerminalListViewModel

@{
    this.ViewData["Title"] = "All Terminals";
}

<table id="myTable" class="table table-hover table-striped">
    <thead>
        <tr>
            <th scope="col">POS Terminal</th>
            <th scope="col">Trader username</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.Terminals)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.TraderUserName</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{
    <script src="~/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            $('#myTable').DataTable();
        });
    </script>
}